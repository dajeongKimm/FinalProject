<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>Library</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>DBCPInit</servlet-name>
    <servlet-class>mvc.util.DBCPInit</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <context-param>
    <param-name>saveDirectory</param-name>
    <param-value>/upload/image</param-value>
  </context-param>
  <context-param>
    <param-name>saveDirectory_member</param-name>
    <param-value>/upload/memberimage</param-value>
  </context-param>
  <context-param>
    <param-name>saveDirectory_article</param-name>
    <param-value>/upload/article</param-value>
  </context-param>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>mvc.filter.EncodingFilter</filter-class>
    <init-param>
      <param-name>FilterParam</param-name>
      <param-value>FilterParamValue</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>LoginCheckFilter</filter-name>
    <filter-class>mvc.filter.LoginCheckFilter</filter-class>
  </filter>
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>/upload/*</url-pattern>
    <url-pattern>/jdbc/*</url-pattern>
    <url-pattern>/static/*</url-pattern>
  </servlet-mapping>
</web-app>